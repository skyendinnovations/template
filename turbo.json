{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": { "cache": false },

    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"],
      "env": ["DATABASE_URL", "BETTER_AUTH_SECRET", "BETTER_AUTH_URL"]
    },

    "lint": {},
    "clean": { "cache": false },

    "db:generate": {
      "env": ["DATABASE_URL"]
    },

    "db:migrate": {
      "env": ["DATABASE_URL"]
    },

    "db:studio": {
      "cache": false,
      "env": ["DATABASE_URL"]
    }
  }
}
